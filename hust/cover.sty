\ProvidesPackage{hust/cover}
\RequirePackage{hust/pkgs}

% 封面主标题
% 对于 proposal 类型的主标题, 默认为两行, 若仅有一行, 需要在末尾添加空行 \\\;
\newcommand{\headCover}{本科生毕业设计}
% 封面次标题
\newcommand{\subheadCover}{论文标题}

% 院系名称
\newcommand{\collegeCover}{\;}
% 专业班级
\newcommand{\classCover}{\;}
% 作者
\newcommand{\authorCover}{\;}
% 学号
\newcommand{\numberCover}{\;}
% 指导教师
\newcommand{\teacherCover}{\;}

% 年
\newcommand{\yearCover}{\;}
% 月
\newcommand{\monthCover}{\;}
% 日
\newcommand{\dayCover}{\;}

% 基本封面, 基于 https://github.com/SukunaShinmyoumaru-hust/Hust-undergraduate-thesis/blob/main/template/cover/cover.sty
% 参数: 封面类型, 可用类型有 
% thesis 论文
% proposal 报告
% translation 翻译
\NewDocumentCommand\makecover{O{\HUST@docmode}}{
    \pagestyle{plain}
    \pagenumbering{gobble}
    \begin{titlepage}
        \centering
        \vspace*{-0.1cm}
        {\includegraphics[height=1.42cm]{hust/res/logo.eps}}

        \IfStrEqCase{#1}{
            {translation}{
                \vspace{2em}
                {\zihao{2}\songti\bfseries\headCover}\\[5em]
                \begin{tabular}{p{6em}p{9cm}}
                    \zihao{-3}\bfseries 译文出处： & \zihao{5}\textit{\subheadCover} \\
                \end{tabular}\\[7em]
            }
            {proposal}{% 使用大标题
                \vspace{2em}
                {\zihao{2}\songti\bfseries\headCover}\\[3em]
                {\zihao{-3}\songti\bfseries 题\hspace{2em}目：\subheadCover}\\[9em]
            }
            {thesis}{
                \vspace{4em}
                {\zihao{-0}\songti\bfseries\headCover}\\[6em]
                {\zihao{2}\heiti\subheadCover}\\[9em]
            }
        }

        {\songti\zihao{3}\renewcommand{\arraystretch}{1.3}
        \begin{tabular}{>{\bfseries}p{4em}p{11em}}
            院\hfill 系& \uline{\hfill\collegeCover\hfill\;} \\
            专\hfill 业\hfill 班\hfill 级& \uline{\hfill\classCover\hfill\;} \\
            作\hfill 者& \uline{\hfill\authorCover\hfill\;} \\
            学\hfill 号& \uline{\hfill\numberCover\hfill\;} \\
            指\hfill 导\hfill 教\hfill 师& \uline{\hfill\teacherCover\hfill\;}
        \end{tabular}}\\[5em]

        {\zihao{4}\sffamily\renewcommand{\arraystretch}{1.0}
        \begin{tabular}{*{7}{cc}}
            \hfill\yearCover\hfill &年&\hfill\monthCover\hfill &月&\hfill\dayCover\hfill &日
        \end{tabular}}

    \end{titlepage}
    \clearpage
}

% 进入正文
\NewDocumentCommand\coverEnd{}{
    \pagestyle{fancy}
    \pagenumbering{arabic}
}
