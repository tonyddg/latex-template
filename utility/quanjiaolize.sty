\ProvidesPackage{utility/quanjiaolize}

\RequirePackage{xstring}
% 将常用的半角标点转换为全角标点
\NewDocumentCommand{\q}{m}{%
    \IfStrEqCase{#1}{%
        {,}{%逗号
            ，%
        }%
        {`}{%顿号
            、%
        }%
        {.}{%句号
            。%
        }%
        {?}{%问号
            ？%
        }%
        {!}{%感叹号
            ！%
        }%
        {;}{%分号
            ；%
        }%
        {:}{%冒号
            ：%
        }%
        {<}{%左书名号
            《%
        }%
        {>}{%右书名号
            》%
        }%
        {(}{%左括号
            （%
        }%
        {)}{%右括号
            ）%
        }%
        {-}{%破折号
            ——%
        }%
        {...}{%省略号
            ……%
        }%
    }
}